@model List<WebUI.DTO.IdentityDtos.UserDtos.UserWithRolesDto>
@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/UILayout/Index.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .table-container {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        padding: 20px;
        overflow-x: auto;
        margin-top: 20px;
    }

    .table th {
        background: #f8f9fa;
        position: relative;
        cursor: pointer;
        padding: 12px 15px;
    }

    .table td {
        vertical-align: middle;
        padding: 12px 15px;
    }

    .btn-delete {
        color: #dc3545;
        border: 1px solid #dc3545;
        padding: 5px 10px;
        transition: all 0.2s;
    }

    .btn-delete:hover {
        background: #dc3545;
        color: white;
    }

    .btn-edit {
        color: #198754;
        border: 1px solid #198754;
        padding: 5px 10px;
        transition: all 0.2s;
        margin-left: 8px;
    }

    .btn-edit:hover {
        background: #198754;
        color: white;
    }

    .date-cell {
        white-space: nowrap;
        font-size: 0.9em;
        color: #666;
    }

    .role-badge {
        padding: 4px 8px;
        border-radius: 4px;
        background: #e9ecef;
        font-size: 0.85em;
        color: #495057;
    }
</style>

<section class="content container-fluid">
    <div class="table-container">
        <a href="/User/CreateUser" class="btn btn-primary btn-add">
            <i class="fas fa-plus me-2"></i> Kullanıcı Ekle
        </a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><i class="fas fa-hashtag me-2"></i>No</th>
                    <th><i class="fas fa-id-card me-2"></i>ID</th>
                    <th><i class="fas fa-user me-2"></i>Username</th>

                    <th><i class="fas fa-user-tag me-2"></i>Role</th>
                    <th><i class="fas fa-clock me-2"></i>Created At</th>
                    <th><i class="fas fa-edit me-2"></i>Updated At</th>
                    <th><i class="fas fa-tools me-2"></i>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <span class="role-badge">
                                <i class="fas fa-shield-alt me-1"></i>
                                @item.Roles.FirstOrDefault()
                            </span>
                        </td>
                        <td class="date-cell">
                            @item.CreatedAt.ToString("dd-MM-yyyy HH:mm")
                        </td>
                        <td class="date-cell">
                            @(item.UpdatedAt?.ToString("dd-MM-yyyy HH:mm") ?? "-")
                        </td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-delete" onclick="deleteUserConfirm('@item.Id')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                                <a href="/User/UpdateUser/@item.Id" class="btn btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="8" class="text-center py-4">
                            <i class="fas fa-users-slash me-2"></i>
                            No users found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function deleteUserConfirm(Id) {
        Swal.fire({
            title: 'Bu Kullanıcıyı sistemden silmek istediğinize emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Hayır, iptal et!'
        }).then((result) => {
            if (result.isConfirmed) {
                fetch("/User/DeleteUser/" + Id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    // Silme isteği tamamlandıktan sonra SweetAlert göster
                    Swal.fire({
                        title: 'Silindi!',
                        text: 'Müşteri başarıyla silindi.',
                        icon: 'success',
                        showConfirmButton: false, // Onay butonunu gizle
                        timer: 1500  // 1.5 saniye sonra otomatik kapanacak
                    }).then(() => {
                        // SweetAlert kapandıktan sonra sayfayı yenile
                        window.location.href = '/User/UserList?deleted=true';
                    });
                })
                .catch(error => {
                    Swal.fire('Hata!', 'Silme işlemi sırasında hata oluştu.', 'error');
                });
            }
        });
    }
</script>