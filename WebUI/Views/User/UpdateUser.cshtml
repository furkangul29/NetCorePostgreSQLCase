@model WebUI.DTO.IdentityDtos.UserDtos.UpdateUserDto
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        .page-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-header {
            background: linear-gradient(135deg, #1a73e8, #289cf5);
            padding: 1.5rem;
            color: white;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .card-header i {
            font-size: 1.8rem;
        }

        .card-header h5 {
            font-size: 1.2rem;
            margin: 0;
            font-weight: 500;
        }

        .card-body {
            padding: 2rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .input-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-group input,
        .input-group select {
            width: 100%;
            padding: 0.8rem 1rem 0.8rem 2.5rem;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .input-group input:focus,
        .input-group select:focus {
            border-color: #1a73e8;
            box-shadow: 0 0 0 3px rgba(26, 115, 232, 0.1);
            outline: none;
        }

        .input-group i {
            position: absolute;
            left: 0.8rem;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            transition: color 0.3s ease;
        }

        .input-group input:focus + i,
        .input-group select:focus + i {
            color: #1a73e8;
        }

        .input-group label {
            position: absolute;
            left: 2.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            transition: all 0.3s ease;
            pointer-events: none;
            font-size: 0.9rem;
        }

        .input-group input:focus ~ label,
        .input-group input:not(:placeholder-shown) ~ label,
        .input-group select:focus ~ label,
        .input-group select:not(:placeholder-shown) ~ label {
            top: -0.5rem;
            left: 0.8rem;
            font-size: 0.75rem;
            color: #1a73e8;
            background: white;
            padding: 0 0.4rem;
        }

        .submit-btn {
            background: linear-gradient(135deg, #1a73e8, #289cf5);
            color: white;
            border: none;
            padding: 1rem 2rem;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 1rem auto;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(26, 115, 232, 0.3);
        }

        .readonly {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .card {
            animation: fadeIn 0.6s ease-out;
        }
        .toastify {
    top: 70px !important;  /* Bildirimleri üstten 70px aşağı yerleştir */
    bottom: auto !important; /* Alttan otomatik konumlandırmayı devre dışı bırak */
    right: 20px !important; /* Sağ kenardan 20px uzaklık */
}

    </style>
</head>
<body>
    <div class="page-container">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-user-edit"></i>
                <h5>Kullanıcı Bilgilerini Güncelle</h5>
            </div>
            <div class="card-body">
                <form id="updateUserForm" asp-controller="User" asp-action="UpdateUser" asp-antiforgery="true">
                    @Html.AntiForgeryToken()
                    <div class="form-grid">
                        <div class="input-group">
                            <input type="text" name="Id" asp-for="Id" readonly class="readonly">
                            <i class="fas fa-id-card"></i>
                            <label>Kullanıcı ID</label>
                        </div>

                        <div class="input-group">
                            <input type="text" name="Username" asp-for="Username" readonly class="readonly">
                            <i class="fas fa-user"></i>
                            <label>Kullanıcı Adı</label>
                        </div>

                        <div class="input-group">
                            <input type="text" name="Name" asp-for="Name" readonly class="readonly">
                            <i class="fas fa-signature"></i>
                            <label>Ad</label>
                        </div>

                        <div class="input-group">
                            <input type="text" name="Surname" asp-for="Surname" readonly class="readonly">
                            <i class="fas fa-signature"></i>
                            <label>Soyad</label>
                        </div>

                        <div class="input-group">
                            <input type="email" name="Email" asp-for="Email" readonly class="readonly">
                            <i class="fas fa-envelope"></i>
                            <label>Email</label>
                        </div>

                        <div class="input-group">
                            <input type="text" name="CurrentRoleName" asp-for="CurrentRoleName" readonly class="readonly">
                            <i class="fas fa-user-tag"></i>
                            <label>Mevcut Rol</label>
                        </div>

                        <div class="input-group">
                            <select name="NewRoleId" asp-for="NewRoleId" asp-items="Model.AvailableRoles">
                                <option value="">-- Yeni rol seçin --</option>
                            </select>
                            <i class="fas fa-user-shield"></i>
                            <label>Yeni Rol</label>
                        </div>
                    </div>

                    <button type="submit" class="submit-btn">
                        <i class="fas fa-save"></i>
                        Güncelle
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('updateUserForm');
            
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                const newRole = this.querySelector('select[name="NewRoleId"]').value;
                if (!newRole) {
                    Toastify({
                        text: "Lütfen yeni bir rol seçin",
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        style: {
                            background: "linear-gradient(to right, #FF416C, #FF4B2B)",
                        }
                    }).showToast();
                    return;
                }
               try {
                    const formData = new FormData(this);
                    const response = await fetch(this.action, {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    const result = await response.text();

                    if (response.ok) {
                        Toastify({
                            text: "Kullanıcı başarıyla güncellendi!",
                            duration: 3000,
                            gravity: "top",
                            position: "right",
                            style: {
                                background: "linear-gradient(to right, #00b09b, #96c93d)",
                            }
                        }).showToast();

                        setTimeout(() => {
                            window.location.href = '/User/UserList';
                        }, 1500);
                    } else {
                        throw new Error('İşlem başarısız');
                    }
                } catch (error) {
                    Toastify({
                        text: "Bir hata oluştu: " + error.message,
                        duration: 3000,
                        gravity: "top",
                        position: "right",
                        style: {
                            background: "linear-gradient(to right, #FF416C, #FF4B2B)",
                        }
                    }).showToast();
                }
            });
        });
    </script>
</body>
</html>
